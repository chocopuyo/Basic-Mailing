<h1>メール希望登録者一覧</h1>

<table>
  <tr>
    <th>メールアドレス</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= will_paginate @users %>
<br />
<%= link_to 'New User', new_user_path %>
<%= form_tag('users/creates', :multipart => true) do %>
  <%= file_field_tag 'csv' %><br />
  <%= submit_tag("csvで増えるお（＾ω＾）") %>
<% end %>
